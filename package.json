{
    "name": "hardhat-project",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "build": "npm run clean && npm run compile",
        "compile": "SKIP_LOAD=true npx hardhat compile",
        "test": "npx hardhat test",
        "coverage": "",
        "lint:fix": "eslint . --fix",
        "clean": "npx hardhat clean",
        "lint": "eslint .",
        "accounts": "npx hardhat accounts",
        "migrations:hardhat": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat migrations:eth --verify",
        "migrations:kovan": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat migrations:eth --network kovan --verify",
        "print-contracts": "npx hardhat print-contracts",
        "prettier": "prettier --tab-width 4 --print-width 200 --use-tabs false --write 'contracts/implement/*.sol'",
        "size": "npm run compile && yarn run hardhat size-contracts  --verbose"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-etherscan": "^2.1.3",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "@typechain/ethers-v5": "^7.0.0",
        "@typechain/hardhat": "^2.0.1",
        "@types/mocha": "^8.2.2",
        "chai": "^4.3.4",
        "dotenv": "^8.2.0",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.4.6",
        "hardhat-gas-reporter": "^1.0.4",
        "mocha": "^7.2.0",
        "prettier": "^2.3.0",
        "prettier-plugin-solidity": "*",
        "solc": "^0.7.4",
        "ts-generator": "^0.1.1",
        "ts-node": "^9.1.1",
        "typechain": "^5.0.0",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "@fvictorio/tabtab": "^0.0.1",
        "@nomiclabs/buidler-waffle": "^2.1.0",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "@openzeppelin/contracts": "^3.4.0",
        "bignumber.js": "^9.0.1",
        "canoe-solidity": "^0.1.0",
        "colors.ts": "^1.0.20",
        "hardhat-contract-sizer": "^2.0.3",
        "lowdb": "^1.0.0",
        "tmp-promise": "^3.0.2"
    }
}
